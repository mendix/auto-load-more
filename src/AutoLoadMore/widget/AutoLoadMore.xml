<?xml version="1.0" encoding="utf-8"?>
<widget id="AutoLoadMore.widget.AutoLoadMore" needsEntityContext="false" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../xsd/widget.xsd">
    <name>AutoLoadMore</name>
    <description>Loads more list view items as the user scrolls</description>
    <icon></icon>
    <properties>
        <property key="targetName" type="string" required="true">
            <caption>Target list view</caption>
            <category>General</category>
            <description>The name of the listview</description>
        </property>
        <property key="scrollbar" type="boolean" defaultValue="true">
            <caption>Scrollbar</caption>
            <category>General</category>
            <description>Add a scrollbar to the listview?</description>
        </property>
    </properties>
</widget>
